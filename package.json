{
  "name": "tailwind-runtime-jit",
  "version": "",
  "license": "MIT",
  "homepage": "https://github.com/Tarik02/tailwind-runtime-jit#readme",
  "bugs": {
    "url": "https://github.com/Tarik02/tailwind-runtime-jit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tarik02/tailwind-runtime-jit.git"
  },
  "type": "module",
  "exports": {
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    },
    "./webpack": {
      "types": "./dist/webpack.d.ts",
      "default": "./dist/webpack.js"
    },
    "./loader": {
      "types": "./dist/loader.d.ts",
      "require": "./lib/loader.cjs",
      "default": "./dist/loader.js"
    },
    "./internal/load-config": {
      "types": "./dist/internal/load-config.d.ts",
      "default": "./dist/internal/load-config.js"
    }
  },
  "files": [
    "lib/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepack": "yarn build"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "globby": "^13.1.3",
    "modern-normalize": "^1.1.0",
    "normalize.css": "^8.0.1",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.3",
    "webpack": "^5.77.0"
  },
  "dependencies": {
    "memfs": "^3.4.13",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "path-browserify": "^1.0.1",
    "simple-functional-loader": "^1.2.1",
    "webpack-node-externals": "^3.0.0"
  },
  "peerDependencies": {
    "postcss": ">=7",
    "tailwindcss": ">=3",
    "webpack": ">=5"
  },
  "packageManager": "yarn@3.5.0"
}
